@{
    ViewBag.Title = "Home Page";
}
<div class="container">

    @foreach (var question in ViewBag.AllQuestions)
    {
        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-8">
                <h2>@question.Title</h2>
                <!-- Author -->
                <p class="lead">Posted by @question.Poster at @question.Created</p>
                
                <!-- Post Content -->
                <p class="lead">@question.Question</p>

                <!-- Blog Comments -->
                <!-- Comments Form -->
            </div>
        </div>
    
    }
    </div>

